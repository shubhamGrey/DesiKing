# Code Generated by Sidekick is for learning and experimentation purposes only.
# Use the official .NET SDK image to build the app
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj and restore as distinct layers
COPY ./Agronexis.Api/*.csproj ./Agronexis.Api/
RUN dotnet restore ./Agronexis.Api/Agronexis.Api.csproj

# Copy everything else and build
COPY . .
WORKDIR /src/Agronexis.Api
RUN dotnet publish -c Release -o /app/publish

# Build runtime image
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

# Expose the port your app runs on (default is 5000)
EXPOSE 5000

# Start the application
ENTRYPOINT ["dotnet", "Agronexis.Api.dll"]
